<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeunTae_hobby" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/geuntae_purple</item>
        <item name="colorPrimaryVariant">@color/geuntaei_gradient_purple</item>
        <item name="colorOnPrimary">@color/geuntae_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/geuntae_black_01</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/geuntae_grey_04</item>
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/AppbarStyle</item>
    </style>
    <!-- API 31미만 버전용 스플래쉬 -->
    <style name="Theme.GeunTae_hobby.Splash">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="AppbarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/geuntae_white</item>

    </style>

</resources>